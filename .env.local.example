# Development environment variables
# Copy this file to .env.local and customize as needed

# Database connection (required)
DATABASE_URL="postgresql://user:password@localhost:5432/pipr?schema=public"

# Invite token secret (required for invites)
INVITE_TOKEN_SECRET="your-secret-here"

# Application base URL
APP_BASE_URL="http://localhost:3000"

# ============================================
# DEV AUTH BYPASS
# ============================================
# Set to "true" to skip real authentication during development.
# When enabled, users are identified by:
#   1. x-dev-user-id header (for API testing)
#   2. dev-user-id cookie (for browser sessions)
#   3. Falls back to "dev-user-1" if neither is set
#
# Switch users via: POST /api/dev/switch-user { "userId": "dev-user-2" }
# Check current user: GET /api/dev/switch-user
#
# NEVER enable this in production!
DEV_AUTH_BYPASS="true"
